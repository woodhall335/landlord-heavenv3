{{!--
  ============================================================================
  SCHEDULE 1: PROPERTY DETAILS
  Comprehensive property information for tenancy agreements

  USAGE:
  {{> schedule_property}}
  ============================================================================
--}}

{{#*inline "schedule_property"}}
<section class="schedule" id="schedule-1">
  <div class="schedule-header">
    <h2>Schedule 1</h2>
    <div class="schedule-title">Property Details</div>
  </div>

  <table class="data-table">
    <tr>
      <td class="label">Property Address</td>
      <td class="value address-text">{{property_address}}</td>
    </tr>
    {{#if property_type}}
    <tr>
      <td class="label">Property Type</td>
      <td class="value">{{property_type}}</td>
    </tr>
    {{/if}}
    {{#if number_of_bedrooms}}
    <tr>
      <td class="label">Number of Bedrooms</td>
      <td class="value">{{number_of_bedrooms}}</td>
    </tr>
    {{/if}}
    {{#if furnished_status}}
    <tr>
      <td class="label">Furnished Status</td>
      <td class="value">{{#eq furnished_status "furnished"}}Furnished{{/eq}}{{#eq furnished_status "unfurnished"}}Unfurnished{{/eq}}{{#eq furnished_status "part-furnished"}}Part-Furnished{{/eq}}</td>
    </tr>
    {{/if}}
    {{#if council_tax_band}}
    <tr>
      <td class="label">Council Tax Band</td>
      <td class="value">Band {{council_tax_band}}</td>
    </tr>
    {{/if}}
    {{#if epc_rating}}
    <tr>
      <td class="label">EPC Rating</td>
      <td class="value">{{epc_rating}}{{#if epc_expiry}} (valid until {{epc_expiry}}){{/if}}</td>
    </tr>
    {{/if}}
  </table>

  {{#if property_description}}
  <h3>Property Description</h3>
  <p>{{property_description}}</p>
  {{/if}}

  {{#if included_areas}}
  <h3>Included in the Tenancy</h3>
  <p>{{included_areas}}</p>
  {{/if}}

  {{#if excluded_areas}}
  <h3>Excluded from the Tenancy</h3>
  <p>{{excluded_areas}}</p>
  {{/if}}

  {{#if parking_available}}
  <h3>Parking</h3>
  <table class="data-table">
    <tr>
      <td class="label">Parking Included</td>
      <td class="value">Yes</td>
    </tr>
    {{#if parking_details}}
    <tr>
      <td class="label">Parking Details</td>
      <td class="value">{{parking_details}}</td>
    </tr>
    {{/if}}
  </table>
  {{/if}}

  <h3>Compliance Certificates</h3>
  <table class="data-table">
    {{#if gas_safety_certificate}}
    <tr>
      <td class="label">Gas Safety Certificate</td>
      <td class="value">Valid{{#if gas_safety_certificate_date}} (dated {{gas_safety_certificate_date}}){{/if}}{{#if gas_safety_certificate_expiry}} expires {{gas_safety_certificate_expiry}}{{/if}}</td>
    </tr>
    {{/if}}
    {{#if electrical_safety_certificate}}
    <tr>
      <td class="label">Electrical Safety (EICR)</td>
      <td class="value">Valid{{#if eicr_certificate_date}} (dated {{eicr_certificate_date}}){{/if}}{{#if eicr_next_inspection_date}} next inspection {{eicr_next_inspection_date}}{{/if}}</td>
    </tr>
    {{/if}}
    {{#if epc_rating}}
    <tr>
      <td class="label">Energy Performance Certificate</td>
      <td class="value">Rating {{epc_rating}}{{#if epc_expiry}} (valid until {{epc_expiry}}){{/if}}</td>
    </tr>
    {{/if}}
    {{#if smoke_alarms_fitted}}
    <tr>
      <td class="label">Smoke Alarms</td>
      <td class="value">Fitted on each floor{{#if smoke_alarm_test_date}} (tested {{smoke_alarm_test_date}}){{/if}}</td>
    </tr>
    {{/if}}
    {{#if carbon_monoxide_alarms}}
    <tr>
      <td class="label">Carbon Monoxide Alarms</td>
      <td class="value">Fitted in rooms with solid fuel appliances</td>
    </tr>
    {{/if}}
  </table>

  {{#if is_hmo}}
  <h3>HMO Licensing</h3>
  <table class="data-table">
    <tr>
      <td class="label">HMO Status</td>
      <td class="value">This property is a licensed House in Multiple Occupation</td>
    </tr>
    {{#if hmo_licence_number}}
    <tr>
      <td class="label">Licence Number</td>
      <td class="value">{{hmo_licence_number}}</td>
    </tr>
    {{/if}}
    {{#if hmo_licence_expiry}}
    <tr>
      <td class="label">Licence Expiry</td>
      <td class="value">{{hmo_licence_expiry}}</td>
    </tr>
    {{/if}}
    {{#if number_of_sharers}}
    <tr>
      <td class="label">Maximum Occupants</td>
      <td class="value">{{number_of_sharers}}</td>
    </tr>
    {{/if}}
  </table>
  {{/if}}
</section>
{{/inline}}
