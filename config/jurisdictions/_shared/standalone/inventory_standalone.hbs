      font-weight: 600;
      margin: 8pt 0;
      padding: 8pt;
      background-color: #f8f9fa;
      border: 1pt solid #dee2e6;
    }

    /* ===== TABLES ===== */
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 8pt 0 12pt 0;
    }

    th, td {
      border: 1pt solid #ccc;
      padding: 6pt 8pt;
      text-align: left;
      vertical-align: top;
    }

    th {
      background-color: #f0f0f0;
      font-weight: 600;
      font-size: 9pt;
    }

    td {
      font-size: 9pt;
    }

    .data-table {
      margin-bottom: 12pt;
    }

    .data-table .label {
      background-color: #f8f9fa;
      font-weight: 600;
      width: 30%;
    }

    .data-table .value {
      width: 70%;
    }

    /* ===== ROOM SECTIONS ===== */
    .room-section {
      margin-bottom: 14pt;
      page-break-inside: avoid;
    }

    .room-title {
      background-color: #4a90d9;
      color: white;
      padding: 6pt 10pt;
      margin: 0 0 8pt 0;
      font-size: 10pt;
    }

    .room-inventory th {
      background-color: #e8f4fc;
    }

    .condition-cell {
      width: 20%;
      text-align: center;
    }

    .notes-cell {
      width: 50%;
      /* Allow long text to wrap */
      overflow-wrap: anywhere;
      word-break: break-word;
    }

    /* ===== CONDITION GUIDE ===== */
    .condition-guide {
      margin: 12pt 0;
      font-size: 9pt;
    }

    .condition-guide td:first-child {
      width: 20%;
      font-weight: 600;
    }

    /* ===== SIGNATURE SECTION ===== */
