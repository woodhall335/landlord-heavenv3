{
  "jurisdiction": "England & Wales",
  "version": "1.0",
  "description": "Required facts for each eviction ground and document type",

  "common_facts": {
    "landlord_details": {
      "landlord_full_name": {"type": "string", "required": true},
      "landlord_address": {"type": "string", "required": true},
      "landlord_phone": {"type": "string", "required": false},
      "landlord_email": {"type": "string", "required": false},
      "joint_landlords": {"type": "boolean", "required": true},
      "landlord_2_name": {"type": "string", "required_if": "joint_landlords == true"}
    },

    "tenant_details": {
      "tenant_full_name": {"type": "string", "required": true},
      "tenant_address_current": {"type": "string", "required": true},
      "joint_tenants": {"type": "boolean", "required": true},
      "tenant_2_name": {"type": "string", "required_if": "joint_tenants == true"},
      "number_of_occupants": {"type": "number", "required": true}
    },

    "property_details": {
      "property_address": {"type": "string", "required": true},
      "property_type": {"type": "enum", "values": ["house", "flat", "maisonette", "bungalow", "hmo"], "required": true},
      "property_postcode": {"type": "string", "required": true},
      "number_of_bedrooms": {"type": "number", "required": true}
    },

    "tenancy_details": {
      "tenancy_type": {"type": "enum", "values": ["ast", "assured", "other"], "required": true, "default": "ast"},
      "tenancy_start_date": {"type": "date", "required": true},
      "tenancy_end_date": {"type": "date", "required": false},
      "fixed_term": {"type": "boolean", "required": true},
      "fixed_term_end_date": {"type": "date", "required_if": "fixed_term == true"},
      "rent_amount": {"type": "currency", "required": true},
      "rent_frequency": {"type": "enum", "values": ["weekly", "fortnightly", "monthly", "quarterly"], "required": true},
      "payment_date": {"type": "number", "min": 1, "max": 31, "required": true},
      "deposit_amount": {"type": "currency", "required": true},
      "deposit_protected": {"type": "boolean", "required": true},
      "deposit_scheme": {"type": "enum", "values": ["DPS", "MyDeposits", "TDS"], "required_if": "deposit_protected == true"},
      "deposit_protection_date": {"type": "date", "required_if": "deposit_protected == true"}
    },

    "compliance_checks": {
      "gas_safety_cert_provided": {"type": "boolean", "required": true},
      "gas_safety_cert_date": {"type": "date", "required_if": "gas_safety_cert_provided == true"},
      "epc_provided": {"type": "boolean", "required": true},
      "epc_rating": {"type": "enum", "values": ["A", "B", "C", "D", "E", "F", "G"], "required_if": "epc_provided == true"},
      "how_to_rent_provided": {"type": "boolean", "required": true},
      "prescribed_info_provided": {"type": "boolean", "required_if": "deposit_protected == true"},
      "right_to_rent_check_done": {"type": "boolean", "required": true},
      "property_licensed": {"type": "boolean", "required": false},
      "license_required": {"type": "boolean", "required": false}
    }
  },

  "ground_specific_facts": {
    "ground_1": {
      "landlord_previous_residence": {"type": "boolean", "required": true, "question": "Did you (the landlord) live in this property as your main home before the tenancy started?"},
      "landlord_residence_dates": {"type": "date_range", "required_if": "landlord_previous_residence == true"},
      "notice_given_before_tenancy": {"type": "boolean", "required": true, "question": "Did you give the tenant written notice before/at the start of the tenancy that you might seek possession under Ground 1?"},
      "notice_document": {"type": "file", "required_if": "notice_given_before_tenancy == true"},
      "landlord_now_needs_property": {"type": "boolean", "required": true, "question": "Do you now need to move back into the property as your main home?"},
      "reason_for_needing_property": {"type": "text", "required_if": "landlord_now_needs_property == true"}
    },

    "ground_2": {
      "mortgage_exists": {"type": "boolean", "required": true},
      "mortgage_date": {"type": "date", "required_if": "mortgage_exists == true", "validation": "must_be_before_tenancy_start"},
      "lender_name": {"type": "string", "required_if": "mortgage_exists == true"},
      "lender_demands_possession": {"type": "boolean", "required": true},
      "lender_demand_letter": {"type": "file", "required_if": "lender_demands_possession == true"},
      "notice_given_before_tenancy": {"type": "boolean", "required": true},
      "mortgage_arrears_amount": {"type": "currency", "required": false}
    },

    "ground_8": {
      "rent_amount_monthly": {"type": "currency", "required": true},
      "arrears_amount": {"type": "currency", "required": true, "validation": "must_be_at_least_8_weeks_or_2_months"},
      "arrears_at_notice_date": {"type": "currency", "required": true},
      "arrears_at_current_date": {"type": "currency", "required": true},
      "arrears_duration_months": {"type": "number", "required": true},
      "last_payment_date": {"type": "date", "required": false},
      "last_payment_amount": {"type": "currency", "required": false},
      "rent_payment_history": {"type": "array", "required": true, "items": {
        "date": "date",
        "amount_due": "currency",
        "amount_paid": "currency",
        "balance": "currency"
      }}
    },

    "ground_10": {
      "current_arrears": {"type": "currency", "required": true, "validation": "must_be_greater_than_zero"},
      "arrears_at_notice_date": {"type": "currency", "required": true},
      "payment_history": {"type": "array", "required": true}
    },

    "ground_11": {
      "late_payment_instances": {"type": "array", "required": true, "min_items": 3, "items": {
        "due_date": "date",
        "payment_date": "date",
        "days_late": "number",
        "amount": "currency"
      }},
      "late_payment_pattern": {"type": "text", "required": true},
      "total_late_payments": {"type": "number", "required": true},
      "current_arrears": {"type": "currency", "required": false}
    },

    "ground_12": {
      "breach_type": {"type": "enum", "values": ["pets", "subletting", "business_use", "overcrowding", "alterations", "other"], "required": true},
      "breach_description": {"type": "text", "required": true, "min_length": 50},
      "tenancy_clause_breached": {"type": "text", "required": true},
      "breach_start_date": {"type": "date", "required": true},
      "breach_ongoing": {"type": "boolean", "required": true},
      "breach_evidence": {"type": "array", "items": "file", "required": true},
      "warnings_given": {"type": "array", "items": {
        "date": "date",
        "method": "string",
        "description": "text"
      }},
      "breach_remedied": {"type": "boolean", "required": true}
    },

    "ground_13": {
      "property_condition_start": {"type": "text", "required": true},
      "property_condition_current": {"type": "text", "required": true},
      "deterioration_description": {"type": "text", "required": true, "min_length": 100},
      "deterioration_areas": {"type": "array", "items": "string", "required": true},
      "photographic_evidence": {"type": "array", "items": "file", "required": true, "min_items": 5},
      "inventory_report": {"type": "file", "required": true},
      "checkout_report": {"type": "file", "required": false},
      "tenant_caused_damage": {"type": "boolean", "required": true},
      "other_resident_caused_damage": {"type": "boolean", "required": false},
      "estimated_repair_cost": {"type": "currency", "required": true}
    },

    "ground_14": {
      "nuisance_type": {"type": "enum", "values": ["noise", "antisocial_behavior", "criminal_activity", "threats", "harassment", "drug_use", "other"], "required": true},
      "nuisance_description": {"type": "text", "required": true, "min_length": 100},
      "affected_parties": {"type": "array", "items": {
        "name": "string",
        "address": "string",
        "relationship": "string"
      }, "required": true},
      "incident_log": {"type": "array", "items": {
        "date": "date",
        "time": "time",
        "description": "text",
        "witnesses": "array"
      }, "required": true, "min_items": 2},
      "police_involvement": {"type": "boolean", "required": true},
      "police_crime_numbers": {"type": "array", "items": "string", "required_if": "police_involvement == true"},
      "witness_statements": {"type": "array", "items": "file", "required": true},
      "council_complaints": {"type": "boolean", "required": false},
      "council_reference": {"type": "string", "required_if": "council_complaints == true"},
      "ongoing_nuisance": {"type": "boolean", "required": true}
    },

    "ground_14a": {
      "relationship_type": {"type": "enum", "values": ["married", "civil_partnership"], "required": true},
      "violence_occurred": {"type": "boolean", "required": true},
      "violence_description": {"type": "text", "required": true},
      "partner_left_property": {"type": "boolean", "required": true},
      "date_partner_left": {"type": "date", "required_if": "partner_left_property == true"},
      "evidence_of_violence": {"type": "array", "items": {
        "type": {"type": "enum", "values": ["police_report", "restraining_order", "medical_report", "witness_statement"]},
        "file": "file"
      }, "required": true},
      "victim_statement": {"type": "file", "required": true},
      "victim_unlikely_to_return": {"type": "boolean", "required": true}
    },

    "ground_15": {
      "furniture_provided": {"type": "boolean", "required": true},
      "furniture_inventory": {"type": "file", "required_if": "furniture_provided == true"},
      "furniture_condition_start": {"type": "text", "required": true},
      "furniture_condition_current": {"type": "text", "required": true},
      "damaged_items": {"type": "array", "items": {
        "item": "string",
        "original_condition": "string",
        "current_condition": "string",
        "replacement_cost": "currency"
      }, "required": true},
      "photographic_evidence": {"type": "array", "items": "file", "required": true},
      "ill_treatment_description": {"type": "text", "required": true}
    },

    "ground_17": {
      "false_statement_description": {"type": "text", "required": true, "min_length": 100},
      "statement_made_in": {"type": "enum", "values": ["application_form", "reference", "conversation", "email", "other"], "required": true},
      "statement_document": {"type": "file", "required": false},
      "true_facts": {"type": "text", "required": true},
      "evidence_of_falsehood": {"type": "array", "items": "file", "required": true},
      "statement_material": {"type": "boolean", "required": true, "description": "Did this false statement influence your decision to grant the tenancy?"},
      "would_not_have_let_if_known": {"type": "boolean", "required": true}
    }
  },

  "section_21_facts": {
    "section_21_specific": {
      "reason_for_eviction": {"type": "text", "required": false, "note": "Not required for Section 21, but helpful for records"},
      "fixed_term_expired": {"type": "boolean", "required": true},
      "all_compliance_met": {"type": "boolean", "required": true},
      "deposit_protected_correctly": {"type": "boolean", "required": true},
      "gas_safety_up_to_date": {"type": "boolean", "required": true},
      "epc_rating_compliant": {"type": "boolean", "required": true},
      "how_to_rent_latest_version": {"type": "boolean", "required": true},
      "no_retaliatory_circumstances": {"type": "boolean", "required": true},
      "no_prohibited_fees_charged": {"type": "boolean", "required": true},
      "licensing_compliant": {"type": "boolean", "required": true},
      "tenancy_at_least_4_months": {"type": "boolean", "required": true}
    }
  },

  "money_claim_facts": {
    "claim_type": {"type": "enum", "values": ["rent_arrears", "property_damage", "both"], "required": true},
    "total_claim_amount": {"type": "currency", "required": true},

    "rent_claim": {
      "arrears_breakdown": {"type": "array", "items": {
        "period_start": "date",
        "period_end": "date",
        "amount_due": "currency",
        "amount_paid": "currency",
        "balance": "currency"
      }},
      "total_rent_claim": {"type": "currency", "required": true}
    },

    "damage_claim": {
      "damage_items": {"type": "array", "items": {
        "item": "string",
        "description": "text",
        "cost_to_repair": "currency",
        "cost_to_replace": "currency",
        "claim_amount": "currency",
        "evidence": "file"
      }},
      "total_damage_claim": {"type": "currency", "required": true}
    },

    "letter_before_action": {
      "lba_sent": {"type": "boolean", "required": true},
      "lba_date": {"type": "date", "required_if": "lba_sent == true"},
      "lba_method": {"type": "enum", "values": ["email", "post", "hand_delivered"], "required_if": "lba_sent == true"},
      "lba_response_deadline": {"type": "date", "required_if": "lba_sent == true"},
      "tenant_responded": {"type": "boolean", "required_if": "lba_sent == true"}
    }
  },

  "ast_facts": {
    "tenancy_type": {"type": "enum", "values": ["standard", "premium", "hmo"], "required": true},

    "property_details": {
      "furnished": {"type": "enum", "values": ["furnished", "part_furnished", "unfurnished"], "required": true},
      "furniture_inventory": {"type": "array", "items": "string", "required_if": "furnished != 'unfurnished'"},
      "parking": {"type": "boolean", "required": true},
      "parking_details": {"type": "text", "required_if": "parking == true"},
      "garden": {"type": "boolean", "required": true},
      "garden_maintenance": {"type": "enum", "values": ["landlord", "tenant", "shared"], "required_if": "garden == true"},
      "pets_allowed": {"type": "boolean", "required": true},
      "smoking_allowed": {"type": "boolean", "required": true}
    },

    "utilities": {
      "council_tax_responsibility": {"type": "enum", "values": ["landlord", "tenant"], "required": true},
      "water_included": {"type": "boolean", "required": true},
      "electricity_included": {"type": "boolean", "required": true},
      "gas_included": {"type": "boolean", "required": true},
      "internet_included": {"type": "boolean", "required": true}
    },

    "premium_additions": {
      "break_clause": {"type": "boolean", "required": false},
      "break_clause_date": {"type": "date", "required_if": "break_clause == true"},
      "redecoration_allowance": {"type": "boolean", "required": false},
      "professional_cleaning": {"type": "boolean", "required": false}
    }
  },

  "hmo_facts": {
    "hmo_details": {
      "number_of_tenants": {"type": "number", "required": true, "min": 3},
      "number_of_households": {"type": "number", "required": true, "min": 2},
      "number_of_storeys": {"type": "number", "required": true},
      "shared_facilities": {"type": "array", "items": {"type": "enum", "values": ["kitchen", "bathroom", "toilet", "living_room"]}, "required": true},
      "individual_room_numbers": {"type": "array", "items": "string", "required": true}
    },

    "licensing": {
      "mandatory_license_required": {"type": "boolean", "required": true},
      "mandatory_license_number": {"type": "string", "required_if": "mandatory_license_required == true"},
      "additional_license_required": {"type": "boolean", "required": true},
      "additional_license_number": {"type": "string", "required_if": "additional_license_required == true"},
      "council_name": {"type": "string", "required": true},
      "license_expiry_date": {"type": "date", "required": false}
    },

    "safety_requirements": {
      "fire_alarm_system": {"type": "boolean", "required": true},
      "fire_doors": {"type": "boolean", "required": true},
      "emergency_lighting": {"type": "boolean", "required": true},
      "fire_blanket_extinguisher": {"type": "boolean", "required": true}
    },

    "management": {
      "house_rules": {"type": "text", "required": true},
      "communal_area_cleaning": {"type": "enum", "values": ["landlord", "tenants", "cleaning_service"], "required": true},
      "bin_collection_day": {"type": "string", "required": true},
      "noise_curfew": {"type": "boolean", "required": true},
      "noise_curfew_time": {"type": "time", "required_if": "noise_curfew == true"}
    }
  },

  "validation_rules": {
    "deposit_amount": {
      "max_weeks_rent": 5,
      "validation": "deposit_amount <= (rent_amount * 5)"
    },
    "notice_periods": {
      "section_8_minimum": 14,
      "section_21_minimum": 60
    },
    "tenancy_duration": {
      "minimum_days": 1,
      "ast_typical_months": 6
    }
  }
}
