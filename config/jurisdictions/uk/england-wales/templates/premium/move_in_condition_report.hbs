      line-height: 1.6;
      color: #1a202c;
    }

    .header {
      text-align: center;
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 3px solid #2c5282;
    }

    .document-title {
      font-size: 24pt;
      font-weight: 700;
      color: #2c5282;
      margin-bottom: 10px;
      line-height: 1.3;
    }

    .subtitle {
      font-size: 12pt;
      color: #4a5568;
      margin-top: 8px;
    }

    .section {
      margin: 25px 0;
      page-break-inside: avoid;
    }

    .section-title {
      font-size: 14pt;
      font-weight: 700;
      color: #2c5282;
      margin-bottom: 15px;
      padding: 10px 15px;
      background: linear-gradient(135deg, #e6f2ff 0%, #cce5ff 100%);
      border-left: 4px solid #2c5282;
    }

    .info-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px 20px;
      margin-bottom: 15px;
    }

    .info-item {
      padding: 8px 0;
    }

    .info-label {
      font-weight: 600;
      color: #2d3748;
      display: block;
      margin-bottom: 3px;
      font-size: 10pt;
    }

    .info-value {
      color: #1a202c;
      display: block;
      font-size: 11pt;
    }

    .room-section {
      border: 2px solid #cbd5e0;
      border-radius: 8px;
      padding: 20px;
      margin: 20px 0;
      background: #f7fafc;
      page-break-inside: avoid;
    }

    .room-title {
      font-size: 13pt;
      font-weight: 700;
      color: #2c5282;
      margin-bottom: 15px;
      padding-bottom: 10px;
      border-bottom: 2px solid #cbd5e0;
    }

    .condition-table {
      width: 100%;
      border-collapse: collapse;
      margin: 10px 0;
    }

    .condition-table th {
      background: #e6f2ff;
      padding: 8px;
      text-align: left;
      font-size: 10pt;
      border-bottom: 2px solid #2c5282;
    }

    .condition-table td {
      padding: 8px;
      border-bottom: 1px solid #cbd5e0;
      vertical-align: top;
    }

    .condition-table tr:last-child td {
      border-bottom: none;
    }

    .notes-box {
      background: white;
      border: 1px solid #cbd5e0;
      border-radius: 4px;
      padding: 10px;
      min-height: 60px;
      margin: 5px 0;
    }

    .rating-scale {
      background: white;
      border: 1px solid #cbd5e0;
      border-radius: 4px;
      padding: 15px;
      margin: 15px 0;
    }

    .rating-options {
      display: flex;
      justify-content: space-around;
      margin-top: 10px;
      flex-wrap: wrap;
    }

    .rating-option {
      text-align: center;
      padding: 5px;
    }

    .signature-section {
      margin-top: 40px;
      page-break-inside: avoid;
    }

    .signature-box {
      border: 2px solid #cbd5e0;
      border-radius: 8px;
      padding: 20px;
      margin: 15px 0;
      background: white;
    }

    .signature-line {
      border-bottom: 2px solid #2c5282;
      margin: 30px 0 10px 0;
      min-height: 50px;
    }

    .info-box {
      background: #f0fff4;
      border-left: 4px solid #38a169;
      padding: 15px;
      margin: 15px 0;
      border-radius: 4px;
    }

    .warning-box {
      background: #fff5f5;
      border-left: 4px solid #e53e3e;
      padding: 15px;
      margin: 15px 0;
      border-radius: 4px;
    }

