{{! Form N5B - Claim for possession of property (accelerated procedure) }}
{{! This template replicates the exact structure of the official HMCTS Form N5B }}
{{! For Section 21 cases only - no hearing required if defendant doesn't respond }}
{{! Last updated format: November 2020 }}

{{#if pdf_generation}}
<style>
  @page {
    size: A4;
    margin: 0;
  }
  body {
    font-family: Arial, sans-serif;
    font-size: 10pt;
    margin: 0;
    padding: 20mm;
    line-height: 1.3;
  }
  .form-header {
    border-bottom: 2px solid black;
    padding-bottom: 10px;
    margin-bottom: 15px;
  }
  .court-stamp {
    float: right;
    width: 60mm;
    height: 40mm;
    border: 1px solid black;
    text-align: center;
    padding-top: 15mm;
    font-size: 9pt;
  }
  .section-heading {
    background-color: #000000;
    color: white;
    padding: 5px;
    font-weight: bold;
    margin-top: 15px;
    margin-bottom: 5px;
  }
  .field-label {
    font-weight: bold;
    font-size: 9pt;
  }
  .checkbox {
    display: inline-block;
    width: 12px;
    height: 12px;
    border: 1px solid black;
    margin-right: 5px;
    text-align: center;
    vertical-align: middle;
  }
  .checkbox.checked::before {
    content: "✓";
  }
  .fill-box {
    border-bottom: 1px solid black;
    min-height: 20px;
    margin-bottom: 5px;
  }
  table {
    width: 100%;
    border-collapse: collapse;
  }
  table, th, td {
    border: 1px solid black;
  }
  th, td {
    padding: 5px;
    text-align: left;
  }
  .notes-box {
    border: 1px solid black;
    padding: 10px;
    background-color: #f0f0f0;
    font-size: 9pt;
    margin: 10px 0;
  }
  .warning-box {
    border: 2px solid #FF0000;
    background-color: #FFE6E6;
    padding: 10px;
    margin: 10px 0;
    font-weight: bold;
  }
</style>
{{/if}}

<div class="form-header">
  <div style="float: left; width: 60%;">
    <div style="font-size: 18pt; font-weight: bold;">Claim form</div>
    <div style="font-size: 12pt;">For possession of property</div>
    <div style="font-size: 11pt; margin-top: 5px;">(accelerated procedure)</div>
  </div>
  <div class="court-stamp">
    <div style="font-size: 8pt; margin-bottom: 5mm;">For court use only</div>
    <div style="font-size: 8pt;">Claim No.</div>
    <div style="border-top: 1px solid black; margin: 5mm 10mm; padding-top: 2mm;">
      {{#if claim_number}}{{claim_number}}{{else}}&nbsp;{{/if}}
    </div>
    <div style="font-size: 8pt; margin-top: 5mm;">Issue date</div>
  </div>
  <div style="clear: both;"></div>
</div>

<div style="text-align: right; font-size: 18pt; font-weight: bold; margin-bottom: 10px;">N5B</div>

<div class="warning-box">
  THIS FORM MUST ONLY BE USED FOR CLAIMS UNDER SECTION 21 OF THE HOUSING ACT 1988
</div>

<!-- CLAIMANT AND DEFENDANT SECTION -->
<table style="margin-bottom: 15px;">
  <tr>
    <td style="width: 50%; vertical-align: top;">
      <div class="field-label">Claimant's full name(s)</div>
      <div style="margin-top: 5px;">
        {{landlord_full_name}}{{#if landlord_2_name}}<br>{{landlord_2_name}}{{/if}}
      </div>
      {{#if claimant_reference}}
      <div style="margin-top: 10px;">
        <span class="field-label">Claimant's ref:</span> {{claimant_reference}}
      </div>
      {{/if}}
    </td>
    <td style="width: 50%; vertical-align: top;">
      <div class="field-label">Defendant's full name</div>
      <div style="margin-top: 5px;">
        {{tenant_full_name}}{{#if tenant_2_name}}<br>{{tenant_2_name}}{{/if}}
      </div>
    </td>
  </tr>
</table>

<div style="margin: 10px 0;">
  <span class="field-label">Claimant's full address (including postcode):</span>
  <div class="fill-box">{{landlord_address}}</div>
  {{#if landlord_phone}}
  <div style="margin-top: 5px;">
    <span class="field-label">Telephone:</span> {{landlord_phone}}
  </div>
  {{/if}}
  {{#if landlord_email}}
  <div>
    <span class="field-label">Email:</span> {{landlord_email}}
  </div>
  {{/if}}
</div>

<div style="margin: 15px 0;">
  <span class="field-label">Defendant's address (the property of which possession is claimed):</span>
  <div class="fill-box">{{property_address}}</div>
</div>

<!-- COURT DETAILS -->
<div style="margin: 15px 0;">
  <span class="field-label">Name and full address of the county court to which this claim will be sent:</span>
  <div class="fill-box">{{court_name}}</div>
  <div class="fill-box">{{court_address}}</div>
  <div class="fill-box">{{court_postcode}}</div>
</div>

<!-- THE TENANCY -->
<div class="section-heading">1. The tenancy</div>

<div class="notes-box">
  You must attach a copy of the written tenancy agreement or, if there is no written agreement, give details of the oral agreement below.
</div>

<div style="margin: 10px 0;">
  <div>
    <span class="checkbox{{#if written_agreement}} checked{{/if}}"></span>
    I attach a copy of the written tenancy agreement
  </div>
  <div style="margin-top: 5px;">
    <span class="checkbox{{#if oral_agreement}} checked{{/if}}"></span>
    There is no written tenancy agreement. The terms are:
  </div>
  {{#if oral_agreement}}
  <div style="border: 1px solid black; min-height: 60px; padding: 10px; margin: 10px 0;">
    {{oral_agreement_terms}}
  </div>
  {{/if}}
</div>

<div style="margin: 15px 0;">
  <div class="field-label">The tenancy started on:</div>
  <div class="fill-box">{{tenancy_start_date}}</div>
</div>

<div style="margin: 15px 0;">
  <div class="field-label">The current rent is:</div>
  <div style="display: inline-block; width: 30%;">
    <div class="fill-box">£{{rent_amount}}</div>
  </div>
  <span style="margin-left: 20px;" class="field-label">payable:</span>
  <div style="display: inline-block; width: 30%;">
    <div class="fill-box">{{rent_frequency}}</div>
  </div>
</div>

<div style="margin: 15px 0;">
  <div class="field-label">The tenancy is:</div>
  <div style="margin-left: 20px;">
    <div>
      <span class="checkbox{{#if assured_shorthold_created_on_or_after_28_feb_1997}} checked{{/if}}"></span>
      an assured shorthold tenancy created on or after 28 February 1997 where no notice was served before the grant of the tenancy under section 20 of the Housing Act 1988
    </div>
    <div style="margin-top: 5px;">
      <span class="checkbox{{#if assured_shorthold_before_28_feb_1997}} checked{{/if}}"></span>
      an assured shorthold tenancy within the meaning of section 19A or 20(1)(b) to (f) of the Housing Act 1988 created before 28 February 1997
    </div>
    <div style="margin-top: 5px;">
      <span class="checkbox{{#if replacement_tenancy}} checked{{/if}}"></span>
      a replacement tenancy as defined in paragraph 6, Schedule 2A of the Housing Act 1988
    </div>
  </div>
</div>

<!-- THE NOTICE -->
<div class="section-heading">2. The notice</div>

<div class="notes-box">
  <strong>You must attach a copy of the section 21 notice.</strong> The notice must be in the prescribed form (Form 6A) if the tenancy started on or after 1 October 2015, or if it's a periodic tenancy that started before that date.
</div>

<div style="margin: 10px 0;">
  <div class="field-label">A notice was served on the defendant(s) requiring possession:</div>

  {{#if section_21_notice_type_1b}}
  <div style="margin-top: 5px;">
    <span class="checkbox checked"></span>
    under section 21(1)(b) of the Housing Act 1988
  </div>
  <div style="margin-left: 30px; margin-top: 5px;">
    <div class="field-label">served on:</div>
    <div class="fill-box">{{section_21_notice_date}}</div>
    <div class="field-label">requiring possession on or after:</div>
    <div class="fill-box">{{section_21_possession_date}}</div>
    <div style="margin-top: 5px; font-size: 9pt;">
      (This date must not be earlier than the last day of the fixed term and not less than 2 months from the date of service of the notice)
    </div>
  </div>
  {{/if}}

  {{#if section_21_notice_type_4a}}
  <div style="margin-top: 5px;">
    <span class="checkbox checked"></span>
    under section 21(4)(a) of the Housing Act 1988
  </div>
  <div style="margin-left: 30px; margin-top: 5px;">
    <div class="field-label">served on:</div>
    <div class="fill-box">{{section_21_notice_date}}</div>
    <div class="field-label">expiring on:</div>
    <div class="fill-box">{{section_21_expiry_date}}</div>
    <div style="margin-top: 5px; font-size: 9pt;">
      (The date on which the periodic tenancy could have been brought to an end by a notice to quit given by the landlord on the same date)
    </div>
  </div>
  {{/if}}
</div>

<div style="margin: 15px 0;">
  <div>
    <span class="checkbox checked"></span>
    I attach a copy of the section 21 notice
  </div>
</div>

<div style="margin: 15px 0;">
  <div class="field-label">The notice was served by:</div>
  <div style="margin-left: 20px;">
    <div>
      <span class="checkbox{{#if service_by_hand}} checked{{/if}}"></span>
      delivering it to the defendant
    </div>
    <div style="margin-top: 5px;">
      <span class="checkbox{{#if service_by_post}} checked{{/if}}"></span>
      sending it by first class post
    </div>
    <div style="margin-top: 5px;">
      <span class="checkbox{{#if service_by_leaving}} checked{{/if}}"></span>
      leaving it at the defendant's address in a sealed envelope addressed to the defendant
    </div>
    <div style="margin-top: 5px;">
      <span class="checkbox{{#if service_other}} checked{{/if}}"></span>
      other method (specify):
      {{#if service_other_method}}
      <div class="fill-box">{{service_other_method}}</div>
      {{/if}}
    </div>
  </div>
</div>

<!-- TENANCY DEPOSIT -->
<div class="section-heading">3. Tenancy deposit</div>

<div class="notes-box">
  Complete this section if a deposit was paid. If no deposit was paid, tick the box below.
</div>

<div style="margin: 10px 0;">
  <div>
    <span class="checkbox{{#if no_deposit}} checked{{/if}}"></span>
    No deposit was paid in connection with the tenancy
  </div>
</div>

{{#if deposit_paid}}
<div style="margin: 15px 0;">
  <div class="field-label">A deposit was paid of:</div>
  <div class="fill-box">£{{deposit_amount}}</div>
</div>

<div style="margin: 15px 0;">
  <div class="field-label">The deposit was paid on:</div>
  <div class="fill-box">{{deposit_payment_date}}</div>
</div>

<div style="margin: 15px 0;">
  <div class="field-label">The deposit is held by:</div>
  <div style="margin-left: 20px;">
    <div>
      <span class="checkbox{{#if deposit_held_by_landlord}} checked{{/if}}"></span>
      the landlord
    </div>
    <div style="margin-top: 5px;">
      <span class="checkbox{{#if deposit_held_by_agent}} checked{{/if}}"></span>
      the landlord's agent
    </div>
    <div style="margin-top: 5px;">
      <span class="checkbox{{#if deposit_held_by_scheme}} checked{{/if}}"></span>
      a tenancy deposit scheme
    </div>
  </div>
</div>

<div style="margin: 15px 0;">
  <div class="field-label">The deposit is protected in the following tenancy deposit scheme:</div>
  <div style="margin-left: 20px;">
    <div>
      <span class="checkbox{{#if deposit_scheme_dps}} checked{{/if}}"></span>
      The Deposit Protection Service (The DPS)
    </div>
    <div style="margin-top: 5px;">
      <span class="checkbox{{#if deposit_scheme_mydeposits}} checked{{/if}}"></span>
      MyDeposits
    </div>
    <div style="margin-top: 5px;">
      <span class="checkbox{{#if deposit_scheme_tds}} checked{{/if}}"></span>
      The Tenancy Deposit Scheme (The TDS)
    </div>
  </div>
</div>

<div style="margin: 15px 0;">
  <div class="field-label">The deposit was protected on:</div>
  <div class="fill-box">{{deposit_protection_date}}</div>
  <div style="margin-top: 5px; font-size: 9pt; font-style: italic;">
    (This must be within 30 days of receiving the deposit)
  </div>
</div>

<div style="margin: 15px 0;">
  <div class="field-label">The deposit reference/certificate number is:</div>
  <div class="fill-box">{{deposit_reference}}</div>
</div>

<div style="margin: 15px 0;">
  <div class="field-label">The prescribed information was given to the tenant on:</div>
  <div class="fill-box">{{prescribed_info_date}}</div>
  <div style="margin-top: 5px; font-size: 9pt; font-style: italic;">
    (This must be within 30 days of receiving the deposit)
  </div>
</div>

<div style="margin: 15px 0;">
  <div>
    <span class="checkbox checked"></span>
    I attach evidence that the deposit was protected and that the prescribed information was given to the tenant
  </div>
</div>
{{/if}}

<!-- OTHER INFORMATION -->
<div class="section-heading">4. Other information required by rules</div>

<div class="notes-box">
  You must complete this section to confirm that the property complies with all legal requirements.
</div>

<div style="margin: 15px 0;">
  <div class="field-label">Gas Safety</div>
  <div style="margin-left: 20px;">
    <div>
      <span class="checkbox{{#if gas_certificate_provided}} checked{{/if}}"></span>
      A copy of the current gas safety certificate has been given to the defendant
    </div>
    <div style="margin-top: 5px;">
      <span class="checkbox{{#if no_gas_appliances}} checked{{/if}}"></span>
      There are no gas appliances at the property
    </div>
    {{#if gas_certificate_provided}}
    <div style="margin-top: 10px;">
      <div class="field-label">Date certificate provided:</div>
      <div class="fill-box">{{gas_cert_date}}</div>
    </div>
    {{/if}}
  </div>
</div>

<div style="margin: 15px 0;">
  <div class="field-label">Energy Performance Certificate (EPC)</div>
  <div style="margin-left: 20px;">
    <div>
      <span class="checkbox{{#if epc_provided}} checked{{/if}}"></span>
      A valid Energy Performance Certificate has been given to the defendant
    </div>
    {{#if epc_provided}}
    <div style="margin-top: 10px;">
      <div class="field-label">EPC rating:</div>
      <div class="fill-box">{{epc_rating}}</div>
      <div style="margin-top: 5px; font-size: 9pt; font-style: italic;">
        (Must be rating E or above)
      </div>
    </div>
    {{/if}}
  </div>
</div>

<div style="margin: 15px 0;">
  <div class="field-label">How to Rent Guide</div>
  <div style="margin-left: 20px;">
    <div>
      <span class="checkbox{{#if how_to_rent_provided}} checked{{/if}}"></span>
      The How to Rent guide has been given to the defendant
    </div>
    {{#if how_to_rent_provided}}
    <div style="margin-top: 10px;">
      <div class="field-label">Date provided:</div>
      <div class="fill-box">{{how_to_rent_date}}</div>
      <div class="field-label">Version provided:</div>
      <div class="fill-box">{{how_to_rent_version}}</div>
    </div>
    {{/if}}
  </div>
</div>

<div style="margin: 15px 0;">
  <div class="field-label">Licensing</div>
  <div style="margin-left: 20px;">
    <div>
      <span class="checkbox{{#if property_licensed}} checked{{/if}}"></span>
      The property is licensed (if required)
    </div>
    <div style="margin-top: 5px;">
      <span class="checkbox{{#if license_not_required}} checked{{/if}}"></span>
      No license is required for this property
    </div>
    {{#if property_licensed}}
    <div style="margin-top: 10px;">
      <div class="field-label">License type:</div>
      <div class="fill-box">{{license_type}}</div>
      <div class="field-label">License number:</div>
      <div class="fill-box">{{license_number}}</div>
    </div>
    {{/if}}
  </div>
</div>

<div style="margin: 15px 0;">
  <div class="field-label">Prohibited Fees</div>
  <div style="margin-left: 20px;">
    <div>
      <span class="checkbox checked"></span>
      I confirm that no prohibited fees have been charged under the Tenant Fees Act 2019
    </div>
  </div>
</div>

<div style="margin: 15px 0;">
  <div class="field-label">Retaliatory Eviction</div>
  <div style="margin-left: 20px;">
    <div>
      <span class="checkbox checked"></span>
      The notice was not served within 6 months of the tenant requesting repairs or making a complaint to the local authority
    </div>
  </div>
</div>

<!-- POSSESSION REQUIRED -->
<div class="section-heading">5. Possession</div>

<div style="margin: 10px 0;">
  <div class="field-label">Possession of the property is claimed on or after:</div>
  <div class="fill-box">{{possession_date}}</div>
</div>

<!-- STATEMENT OF TRUTH -->
<div class="section-heading">Statement of Truth</div>

<div class="notes-box">
  <strong>*I believe / The claimant believes that the facts stated in this claim form are true.</strong>
  <div style="margin-top: 5px; font-size: 8pt;">
    *I am duly authorised by the claimant to sign this statement
  </div>
  <div style="margin-top: 5px; font-size: 8pt;">
    Delete as appropriate
  </div>
</div>

<div style="margin: 15px 0;">
  <table style="border: none;">
    <tr>
      <td style="border: none; width: 50%;">
        <div class="field-label">Full name</div>
        <div class="fill-box">{{signatory_name}}</div>
      </td>
      <td style="border: none; width: 50%;">
        <div class="field-label">Name of claimant's solicitor's firm</div>
        <div class="fill-box">{{solicitor_firm}}</div>
      </td>
    </tr>
  </table>
</div>

<div style="margin: 15px 0;">
  <table style="border: none;">
    <tr>
      <td style="border: none; width: 50%;">
        <div class="field-label">Position or office held</div>
        <div class="fill-box">{{signatory_position}}</div>
        <div style="font-size: 8pt; margin-top: 2px;">(if signing on behalf of firm or company)</div>
      </td>
      <td style="border: none; width: 50%;">
        &nbsp;
      </td>
    </tr>
  </table>
</div>

<div style="margin: 15px 0;">
  <table style="border: none;">
    <tr>
      <td style="border: none; width: 70%;">
        <div class="field-label">Signed</div>
        <div style="margin-top: 20px; border-bottom: 1px solid black; min-height: 30px;">
          {{#if signature_image}}
          <img src="{{signature_image}}" style="max-height: 25px;" />
          {{/if}}
        </div>
        <div style="font-size: 8pt; margin-top: 2px;">*(Claimant/Litigation friend/Claimant's solicitor)</div>
        <div style="font-size: 8pt;">*Delete as appropriate</div>
      </td>
      <td style="border: none; width: 30%;">
        <div class="field-label">Date</div>
        <div class="fill-box">{{signature_date}}</div>
      </td>
    </tr>
  </table>
</div>

<!-- ADDRESS FOR DOCUMENTS -->
<div class="section-heading">Claimant's or claimant's solicitor's address to which documents should be sent</div>

<div style="margin: 10px 0;">
  {{#if solicitor_firm}}
  <div><strong>{{solicitor_firm}}</strong></div>
  <div>{{solicitor_address}}</div>
  {{#if solicitor_reference}}
  <div style="margin-top: 5px;">
    <span class="field-label">Ref:</span> {{solicitor_reference}}
  </div>
  {{/if}}
  {{#if solicitor_phone}}
  <div><span class="field-label">Tel:</span> {{solicitor_phone}}</div>
  {{/if}}
  {{#if solicitor_fax}}
  <div><span class="field-label">Fax:</span> {{solicitor_fax}}</div>
  {{/if}}
  {{#if solicitor_dx}}
  <div><span class="field-label">DX:</span> {{solicitor_dx}}</div>
  {{/if}}
  {{#if solicitor_email}}
  <div><span class="field-label">Email:</span> {{solicitor_email}}</div>
  {{/if}}
  {{else}}
  <div>{{landlord_full_name}}</div>
  <div>{{landlord_address}}</div>
  {{#if landlord_phone}}
  <div style="margin-top: 5px;"><span class="field-label">Tel:</span> {{landlord_phone}}</div>
  {{/if}}
  {{#if landlord_email}}
  <div><span class="field-label">Email:</span> {{landlord_email}}</div>
  {{/if}}
  {{/if}}
</div>

<!-- FOOTER -->
<div style="margin-top: 30px; border-top: 1px solid black; padding-top: 10px; font-size: 8pt; color: #666;">
  <div style="float: left;">Form N5B Claim for possession of property (accelerated procedure) (11.20)</div>
  <div style="float: right;">© Crown copyright 2020</div>
  <div style="clear: both;"></div>
</div>

{{#if is_preview}}
<div style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%) rotate(-45deg); font-size: 72pt; color: rgba(255, 0, 0, 0.1); font-weight: bold; z-index: 9999; pointer-events: none;">
  PREVIEW
</div>
{{/if}}
