        <div class="signature-line"></div>
        <div class="signature-label">Signature</div>
        <div class="signature-date">
          <div class="signature-date-label">Date</div>
          <div class="signature-date-line"></div>
        </div>
      </div>
      {{/if}}
    </div>

    <!-- Tenant Signatures -->
    <div style="margin-top: 40px;">
      <div class="subsection-title" style="text-align: center; font-size: 14pt;">TENANT SIGNATURES</div>
      <div class="signature-blocks">
        {{#each tenants}}
        <div class="signature-block">
          <div class="signature-party">TENANT {{number}}</div>
          <div class="signature-name">{{full_name}}</div>
          <div class="signature-line"></div>
          <div class="signature-label">Signature</div>
          <div class="signature-date">
            <div class="signature-date-label">Date</div>
            <div class="signature-date-line"></div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

