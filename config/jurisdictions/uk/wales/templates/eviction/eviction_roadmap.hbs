    .step-number { display: inline-block; width: 30px; height: 30px; background: #c8102e; color: white; border-radius: 50%; text-align: center; line-height: 30px; font-weight: bold; margin-right: 10px; }
    .step-title { font-size: 14pt; font-weight: bold; color: #333; }
