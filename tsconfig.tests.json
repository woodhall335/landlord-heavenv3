{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node"]
  },
  "include": [
    "next-env.d.ts",
    "vitest.d.ts",
    "vitest-env.d.ts",
    "vitest.setup.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.mts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "tests/**/*.mts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
