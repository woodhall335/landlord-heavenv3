{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "corepack enable && pnpm install",
  "functions": {
    "src/app/api/notice-only/preview/*/route.ts": {
      "memory": 1024,
      "maxDuration": 60
    },
    "src/app/api/documents/generate/route.ts": {
      "memory": 1024,
      "maxDuration": 60
    },
    "src/app/api/documents/thumbnail/*/route.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "src/app/api/webhooks/stripe/route.ts": {
      "memory": 1024,
      "maxDuration": 60
    },
    "src/app/api/orders/fulfill/route.ts": {
      "memory": 1024,
      "maxDuration": 60
    },
    "src/app/api/wizard/preview/*/route.ts": {
      "memory": 1024,
      "maxDuration": 60
    },
    "src/app/api/cron/legal-change-check/route.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/legal-change-check?key=$CRON_SECRET",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/seo/cron/daily?key=$CRON_SECRET",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/compliance-check?key=$CRON_SECRET",
      "schedule": "0 8 * * *"
    }
  ]
}
